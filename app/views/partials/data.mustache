<table class="table table-bordered table-responsive m-0">
	<thead class="bg-dark text-light">
		<tr>
			<th>Provider</th>
			<th>Plan</th>
			<th>Speed</th>
			<th>Connection Type</th>
			<th class="text-right">Price</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
  {{#plans}}
		<tr>
			<td class="align-middle">{{providerName}}</td>
			<td class="align-middle">{{name}}</td>
			<td class="align-middle">{{downloadSpeed}}mbps</td>
			<td class="align-middle">{{connection}}</td>
			<td class="align-middle text-right">${{price}} {{priceModel}}</td>

			<td class="text-center">
				<a class="btn btn-primary" href="{{link}}">View Deal</a>
			</td>
		</tr>
	{{/plans}}
	<tbody>
</table>